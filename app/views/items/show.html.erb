<h1 style="color:white"><%= @item.title %><br></h1>
<img src=" <%= @item.image_path %> " style="width:220px;height:228px;"  /><br><br>

    <div style="color:white">
      <h2> Description: </h2>
    <h3><%= @item.description %></h3><br>
    <h4><%= number_to_currency(@item.price) %></h4><br>
  </div>
  <% if @item.status == "retired" %>
    <p>Item Retired</p>
  <% else %>
    <%= button_to "Add to Cart", cart_items_path({item_id: @item.id}) %>
  <% end %>
  <% if current_admin? %>
    <button type="button" class="btn btn-default"><%= link_to "Edit", edit_item_path(@item) %></button>
  <% end %>
